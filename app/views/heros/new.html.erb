<h1 style="text-align: center">Create your hero!</h1>

<div style="margin-top: 20px;" class="row">
<div class="col-xs-4 col-xs-offset-4">
<%= form_with model: @hero, url: new_hero_path, class: "form-horizontal" do |form| %>
<div class="form-group">
		<%= form.label :name, "Hero name:" %>
		<%= form.text_field(:name, class: 'form-control') %>
</div>
<div class="form-group">
		<%= form.label :job, "Hero class:" %>
		<%= form.select :job, ['Warrior', 'Archer', 'Mage'] %>
</div>

<div class="form-group">
		<%= form.submit('Create', class: 'btn-sm btn-primary') %>
</div>
<% end %>
</div>
</div>